{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@hook/*": [
        "src/hook/*"
      ],
      "@component/*": [
        "src/component/*"
      ],
      "@layout/*": [
        "src/layout/*"
      ],
      "@page/*": [
        "src/page/*"
      ],
      "@util/*": [
        "src/util/*"
      ],
      "@typing/*": [
        "src/typing/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
